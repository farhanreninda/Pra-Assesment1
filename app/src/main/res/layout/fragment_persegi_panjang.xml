<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragment.PersegiPanjangFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Persegi Panjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/et_a"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView4" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4" android:hint="Masukkan Panjang"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/et_b" app:layout_constraintStart_toStartOf="@+id/et_a"
                app:layout_constraintEnd_toEndOf="@+id/et_a" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/et_a" android:hint="Masukkan Lebar"/>
        <Button
                android:text="Hitung"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_hitung" app:layout_constraintStart_toStartOf="@+id/et_b"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/et_b"/>
        <Button
                android:text="Share"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_share" app:layout_constraintEnd_toEndOf="@+id/et_b"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/et_b"/>
        <TextView
                android:text="Luas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/btn_hitung"
                app:layout_constraintEnd_toEndOf="@+id/btn_hitung" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_hitung"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <TextView
                android:text="Keliling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" app:layout_constraintEnd_toEndOf="@+id/btn_share"
                app:layout_constraintStart_toStartOf="@+id/btn_share" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_share"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_luas" app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="@+id/textView5" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_keliling" app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="@+id/textView6" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>